 ; Note: This value is mandatory.
-listen = 127.0.0.1:9000
+listen = /var/run/php-fpm/php-fpm.sock
 
 ; Set listen(2) backlog.
 ; Default Value: 511
@@ -45,9 +45,9 @@ listen = 127.0.0.1:9000
